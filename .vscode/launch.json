    "version": "0.2.0",
    "configurations": [
        {       
            "name": "Node.js - Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "program": "${file}",
            "args": ["a", "4"]
        },
        {
            "type": "node-terminal",
            "name": "Test async-training",
            "request": "launch",
            "command": "pnpm test",
            "cwd": "${workspaceFolder}/async-training"
        },
        {
            "type": "node-terminal",
            "name": "Run async-training",
            "request": "launch",
            "command": "node asyncAwaitUsers.js",
            "cwd": "${workspaceFolder}/async-training"
        }
    ]
}